@model IEnumerable<BookShelfApi.Models.Bookmark>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PageNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserBook)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PageNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserBook.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookmarkId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookmarkId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookmarkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
