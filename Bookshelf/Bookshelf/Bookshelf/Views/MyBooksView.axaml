<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Bookshelf.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Bookshelf.Views.MyBooksView">

	<UserControl.Resources>
		<local:BoolToColorConverter x:Key="BoolToColor" />
	</UserControl.Resources>
	
	<Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal">

			<Button Content="Онлайн"
            Command="{Binding SelectOnlineBooksCommand}">
				<Button.Background>
					<SolidColorBrush Color="{Binding OnlineBooksSelected, Converter={StaticResource BoolToColor}}" />
				</Button.Background>
			</Button>

			<Button Content="На руках"
					Command="{Binding SelectIssuedBooksCommand}">
				<Button.Background>
					<SolidColorBrush Color="{Binding IssuedBooksSelected, Converter={StaticResource BoolToColor}}" />
				</Button.Background>
			</Button>

		</StackPanel>
		
		<ContentControl Content="{Binding BooksViewModel}" Grid.Row="1"/>
	</Grid>
</UserControl>
